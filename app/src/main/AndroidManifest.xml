<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dvs.occasus" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <uses-feature android:name="android.hardware.wifi" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/occasus"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".MainActivity"
            android:label="Occasus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetToggles"
            android:parentActivityName=".CreateEvent" >
        </activity>

        <receiver android:name=".Activate_event" >
        </receiver>
        <receiver android:name=".deactivate_event" >
        </receiver>
        <receiver android:name=".activate_quick_silent" >
        </receiver>
        <receiver android:name=".deactivate_quick_silent" >
        </receiver>

        <activity
            android:name=".CreateEvent"
            android:label="@string/title_activity_create_event"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SendMessage"
            android:label="@string/title_activity_send_message"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".ContactsException"
            android:label="@string/title_activity_contacts_exception"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".Show_details"
            android:label="@string/title_activity_show_details"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".help"
            android:label="@string/title_activity_help"
            android:parentActivityName=".MainActivity" >
        </activity>

        <receiver android:name=".CallListener" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".custom_rep"
            android:label="@string/title_activity_custom_rep"
            android:theme="@style/Theme.AppCompat.Light.Dialog" >
        </activity>
        <activity
            android:name=".quick_silent"
            android:label="@string/title_activity_quick_silent" >
        </activity>
        <activity
            android:name=".sync"
            android:label="@string/title_activity_sync" >
        </activity>
        <activity
            android:name=".sync_event_list"
            android:label="@string/title_activity_sync_event_list" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".show_events_list"
            android:label="@string/title_activity_show_events_list" >
        </activity>
    </application>

</manifest>
