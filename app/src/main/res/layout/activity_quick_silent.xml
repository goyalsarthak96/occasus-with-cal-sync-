<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dvs.occasus.quick_silent"
    android:id="@+id/quick_silent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Silent for"
        android:id="@+id/time_textView1"
        android:layout_marginLeft="10dp"
        android:textSize="35dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" By Duration "
        android:id="@+id/time_textView3"
        android:layout_marginLeft="0dp"
        android:textSize="20sp"
        android:layout_marginTop="90dp"
        android:background="@android:drawable/alert_light_frame"
         />

    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_hour"
        android:layout_marginTop="75dp"
        android:text="00"
        android:textSize="40sp"
        android:layout_marginLeft="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":"
        android:id="@+id/time_textView2"
        android:layout_marginLeft="235dp"
        android:textSize="50dp"
        android:layout_marginTop="80dp" />



    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_min"
        android:layout_marginTop="75dp"
        android:text="00"
        android:layout_toRightOf="@+id/time_hour"
        android:textSize="40sp"
        android:layout_marginLeft="20dp" />




    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/time_editText3"
        android:focusable="false"
        android:textSize="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:onClick="set_time" />





    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="15min"
        android:id="@+id/time_button1"
        android:layout_below="@+id/time_min"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="25dp"
        android:onClick="min_15" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="30 min"
        android:id="@+id/time_button2"
        android:layout_below="@+id/time_min"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="130dp"
        android:onClick="min_30" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="1 hour"
        android:id="@+id/time_button3"
        android:layout_below="@+id/time_min"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="235dp"
        android:onClick="hour_1" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="2 hour"
        android:id="@+id/time_button4"
        android:layout_below="@+id/time_button3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:onClick="hour_2" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="5 hour"
        android:id="@+id/time_button5"
        android:layout_below="@+id/time_button3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:onClick="hour_5" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="12 hour"
        android:id="@+id/time_button6"
        android:layout_below="@+id/time_button3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="235dp"
        android:onClick="hour_12" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Go Silent"
        android:id="@+id/silent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="silent"
        android:layout_below="@+id/time_button4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="hr"
        android:id="@+id/textView4_hr"
        android:layout_below="@+id/time_min"
        android:layout_marginLeft="170dp"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="min"
        android:id="@+id/textView4_min"
        android:layout_below="@+id/time_min"
        android:layout_marginLeft="265dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"/>


</RelativeLayout>
</ScrollView>