<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Default Profile"
        android:id="@+id/profile_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/default_bluetooth"
        android:layout_toRightOf="@+id/profile_type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
         />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/default_wifi"
        android:layout_toRightOf="@+id/default_bluetooth"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
         />

    <ImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:id="@+id/default_mobiledata"
        android:layout_toRightOf="@+id/default_wifi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
         />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/default_profile"
        android:layout_toRightOf="@+id/default_mobiledata"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
         />

</RelativeLayout>