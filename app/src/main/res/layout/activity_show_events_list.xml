<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dvs.occasus.show_events_list">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/today_eve"
        android:layout_below="@+id/today_eve_text"
        android:layout_marginTop="15dp"
         />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/later_eve"
        android:layout_below="@+id/other_eve_text"
        android:layout_marginTop="15dp"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Today's Events"
        android:textSize="30sp"
        android:id="@+id/today_eve_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/today_eve"
        android:layout_marginTop="15dp"
        android:text="Other Events"
        android:textSize="30sp"
        android:id="@+id/other_eve_text"
         />
</RelativeLayout>
