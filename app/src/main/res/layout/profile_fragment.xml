<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sync_bluetooth_image"
        android:src="@drawable/bluetooth"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bluetooth"
        android:id="@+id/sync_bluetooth_text"
        android:layout_toRightOf="@+id/sync_bluetooth_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:textSize="25dp" />

    <ToggleButton
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/sync_bluetooth_button"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/sync_bluetooth_text"
        android:layout_marginLeft="65dp"
        android:onClick="bluetooth_settings" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sync_wifi_image"
        android:src="@drawable/wifi"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sync_bluetooth_image"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wifi"
        android:id="@+id/sync_wifi_text"
        android:layout_toRightOf="@+id/sync_wifi_image"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/sync_bluetooth_text"
        android:layout_marginTop="55dp"
        android:textSize="25dp" />

    <ToggleButton
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/sync_wifi_button"
        android:layout_below="@+id/sync_bluetooth_button"
        android:layout_toRightOf="@id/sync_wifi_text"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="125dp"
        android:onClick="wifi_settings" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sync_mobile_data_image"
        android:src="@drawable/mobile_data"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sync_wifi_image"
        android:layout_marginTop="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mobile Data"
        android:id="@+id/sync_mobile_data_text"
        android:layout_toRightOf="@+id/sync_mobile_data_image"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/sync_wifi_text"
        android:layout_marginTop="50dp"
        android:textSize="25dp" />

    <ToggleButton
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/sync_mobiledata_button"
        android:layout_below="@+id/sync_wifi_button"
        android:layout_marginTop="35dp"
        android:onClick="mobiledata_settings"
        android:layout_toRightOf="@+id/sync_mobile_data_text"
        android:layout_marginLeft="40dp"
        android:checked="false" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sync_profile_image"
        android:src="@drawable/profile"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/sync_mobile_data_image"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/sync_profile_text"
        android:layout_toRightOf="@+id/sync_mobile_data_image"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/sync_mobile_data_text"
        android:layout_marginTop="50dp"
        android:textSize="25dp" />

    <Button
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="vibrate"
        android:id="@+id/sync_profile_button"
        android:layout_below="@+id/sync_mobile_data_text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/sync_profile_text"
        android:onClick="silent_settings" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Set!!"
        android:id="@+id/sync_save_btn"
        android:layout_marginTop="60dp"
        android:onClick="save_event"
        android:layout_below="@+id/sync_profile_text"
        android:layout_centerHorizontal="true" />

</RelativeLayout>